<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A72A0"
    tools:context=".AddReviews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="56sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="Add Review"
            android:textColor="#FFFAE6"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/backButton3"
            android:layout_width="56sp"
            android:layout_height="56sp"
            android:layout_margin="10sp"
            android:background="@drawable/circle"
            android:elevation="4sp"
            android:src="@drawable/back"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="104dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="Name of location:"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_Location"
            android:layout_width="260sp"
            android:layout_height="40sp"
            android:background="@drawable/inputs"
            android:padding="5sp"
            android:popupBackground="@drawable/inputs" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="Cleaniness"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/ratingBar_Cleanliness"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFD700" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="Maintance"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/ratingBar_Maintenance"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFD700" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="Accessibility"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/ratingBar_Accessibility"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFD700" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="Other comments"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/text_OtherComments"
            android:layout_width="260sp"
            android:layout_height="90sp"
            android:background="@drawable/inputs"
            android:fontFamily="@font/fredoka_one"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="5dp"
            android:textColor="#FFFAE6"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttons"
            android:ellipsize="end"
            android:fontFamily="@font/fredoka_one"
            android:text="Submit"
            android:textColor="#FFFAE6"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>