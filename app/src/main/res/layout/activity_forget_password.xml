<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="#1A2130">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A2130"
        android:gravity="center|right"
        android:layout_marginRight="5sp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ForbackButton"
            android:layout_width="56dp"
            android:layout_height="56sp"
            android:layout_gravity="top"
            android:layout_margin="1sp"
            android:background="@drawable/circle_light"
            android:elevation="4sp"
            android:src="@drawable/back"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A2130"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="295dp"
            android:layout_height="295sp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:src="@drawable/pisspal_logo_circle" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:text="FORGOT PASSWORD"
            android:textColor="#FFFAE6"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:text="Provide your account email for which you want to reset password"
            android:textColor="#FFFAE6"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:text="Email"
            android:textColor="#FFFAE6"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/input_email"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="5sp"
            android:ems="10"
            android:fontFamily="@font/fredoka_one"
            android:inputType="text"
            android:padding="10sp"
            android:textColor="#FFFAE6" />

        <Button
            android:id="@+id/button_resetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/fredoka_one"
            android:padding="15sp"
            android:text="Reset Password"
            android:textColor="#FFFAE6"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="15sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
